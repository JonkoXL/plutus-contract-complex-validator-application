  exposed-modules:    PlutusComplexValidator
  
  build-depends:     aeson
                     , base ^>=4.14.1.0
                     , bytestring
                     , containers
                     , cardano-api
                     , cardano-crypto-class
                     , cardano-ledger-core                     
                     , data-default
                     , freer-extras
                     , playground-common
                     , plutus-pab
